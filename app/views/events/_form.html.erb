<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group mb-3">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field form-group mb-3">
    <%= form.label :date %>
    <%= form.datetime_select :date %>
  </div>

  <div class="field form-group mb-3 ">
    <%#= form.label :creator_id %>
    <%= form.number_field :creator_id, id: :creator_id, value: current_user.id, type: 'hidden', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-success mb-3'%>
  </div>
<% end %>
