<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_field :description, class: 'form-control', required: true %>
  </div>

  <div class="field form-group mb-3">
    <%= form.label :date, class: 'form-label' %>
    <%= form.datetime_select :date, type: 'datetime-local', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-success mb-3'%>
  </div>
<% end %>
